                                           id="MatKhauXacNhan" name="MatKhauXacNhan" type="password" value="" aria-
                                           describedby="MatKhauXacNhan-error" aria-invalid="true">
                                    @ViewData["NhapMKXN"]
                                    @ViewData["MatKhauGiongNhau"]
                                </div>*@
                                <div class="col-md-12">
                                    <input type="submit" value="Registration" class="btn btn-default" />
                                </div>
                                <a href="/NguoiDung/Login">Đang nhập</a>
                            </div>
                            }
                        </div>
                    </div>
                    
                    
                </div>
        </div>
    </div>
    <!-- Login End -->

